{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test", // this task was replaced by testWithCoverage
            "command": "dotnet",
            "type": "shell",
            "group": "test",
            "args": [
                "test",
                "--logger",
                "trx",
                "${workspaceFolder}/CourseProjectTests/CourseProjectTests.csproj"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "testWithCoverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "--no-build",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./lcov.info",
                "${workspaceFolder}/CourseProjectTests/CourseProjectTests.csproj"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/CourseProject.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildAndRunTests",
            "dependsOrder": "sequence",
            "dependsOn": [
                "testWithCoverage", // Your custom task
                "build" // The build task
            ]
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/CourseProject.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/CourseProject.sln",
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}